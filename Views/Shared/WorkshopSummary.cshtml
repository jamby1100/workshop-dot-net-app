@model Workshop
<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h4>
            @Model.Name
            <span class="badge rounded-pill bg-primary text-white" style="float:right">
                <small>@Model.EstimateTimeToFinish mins</small>
            </span>
        </h4> 
    </div>

        <input type="hidden" asp-for="WorkshopId" />
        <span class="card-text p-1">
            @Model.Description

            @Model.Challenges
            And the count is...
            @Model.Challenges.Count()

            <h1> And the challenges are...</h1>
            @foreach (Challenge item in Model.Challenges) {
                <h1> 
                    @item.Name
                    Jaso
                </h1>
            }
        </span>



</div>