@model Workshop
<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h4>
            @Model.Name

            <a class="badge rounded-pill bg-primary text-white" style="float:right" href="/workshops/@Model.WorkshopId"> 
                View
            </a>
        </h4>
    </div>
    <span class="card-text p-1">
        @Model.Description
    </span>
</div>