@model Workshop
<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h4>
            @Model.Name
            <span class="badge rounded-pill bg-primary text-white" style="float:right">
                <small>@Model.EstimateTimeToFinish mins</small>
            </span>
        </h4> 
    </div>

    <form id="@Model.WorkshopId" asp-page="/Cart" method="post">
        <input type="hidden" asp-for="WorkshopId" />
        <span class="card-text p-1">
            @Model.Description
            <button type="submit" style="float:right" class="btn btn-success btn-sm pull-right" >
                Start
            </button>
        </span>
    </form>

</div>